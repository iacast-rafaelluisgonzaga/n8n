# Usa a imagem oficial do n8n pronta para execução
FROM n8nio/n8n:latest

# Define o diretório de trabalho (opcional, preserva boas práticas)
WORKDIR /home/node

# Define o fuso horário e corrige permissões
ENV GENERIC_TIMEZONE=America/Sao_Paulo
ENV N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# Expõe a porta padrão do n8n
EXPOSE 5678

# Restaura o entrypoint padrão da imagem oficial
ENTRYPOINT ["tini", "--"]

# Define o comando padrão (o entrypoint chamará isso)
CMD ["n8n"]